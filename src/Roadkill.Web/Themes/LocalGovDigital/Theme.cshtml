@inherits RoadkillLayoutPage
<!DOCTYPE html>
<html lang="en-GB" prefix="og: http://ogp.me/ns#">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>@ViewBag.Title</title>
    <meta charset="utf-8">

    <meta property="og:locale" content="en_GB">
    <meta property="og:type" content="website">
    <meta property="og:title" content="@ViewBag.Title">
    <meta property="og:site_name" content="LocalGov Digital">
    <meta name="twitter:title" content="@ViewBag.Title">

    <link rel='dns-prefetch' href='//code.jquery.com'>
    <link rel='dns-prefetch' href='//cdnjs.cloudflare.com'>
    <link rel='dns-prefetch' href='//cdn.jsdelivr.net'>
    <link rel='stylesheet' id='foundation-css' href='https://cdn.jsdelivr.net/foundation/6.2.4/foundation.min.css' type='text/css'>
    <link rel='stylesheet' id='fontawesome-css' href='https://cdn.jsdelivr.net/fontawesome/4.7.0/css/font-awesome.min.css' type='text/css'>
    <link rel='stylesheet' id='styles-css' href='https://localgov.digital/wp-content/themes/localgovdigital/style.css' type='text/css'>


    <script type='text/javascript' src='https://code.jquery.com/jquery-3.2.1.min.js'></script>
    <link rel="icon" href="https://localgov.digital/wp-content/uploads/2017/01/localgovdigital-icon-150x150.png" sizes="32x32">
    <link rel="icon" href="https://localgov.digital/wp-content/uploads/2017/01/localgovdigital-icon-300x300.png" sizes="192x192">
    <link rel="apple-touch-icon-precomposed" href="https://localgov.digital/wp-content/uploads/2017/01/localgovdigital-icon-300x300.png">
    <meta name="msapplication-TileImage" content="https://localgov.digital/wp-content/uploads/2017/01/localgovdigital-icon-300x300.png">
    @Url.CssBundle()
    @Url.JsBundle()
    @MvcHtmlString.Create(SiteSettings.HeadContent)
    @RenderSection("PluginHead", false)
</head>
<body class="@(ViewBag.IsHome == null ? "" : "home")">
    @RenderSection("PageToolbar", false)
    <a href="#content-start" class="screen-reader-text">skip to main content</a>

    <header id="header__page">
        <div id="global__brand-nav">
            <div class="top-links">
                <section>
                    <div class="menu-top-menu-container">
                        <ul id="menu-top-menu" class="menu">
                            <li class="menu-twitter menu-item menu-item-type-custom menu-item-object-custom menu-item-2967"><a href="https://twitter.com/LocalGovDigital">Twitter</a></li>
                            <li class="menu-google-plus menu-item menu-item-type-custom menu-item-object-custom menu-item-2968"><a href="https://plus.google.com/communities/114124478761452023264">Google +</a></li>
                            <li class="menu-slack menu-item menu-item-type-custom menu-item-object-custom menu-item-2989"><a href="https://localgovdigital.slack.com/">Slack</a></li>
                        </ul>
                    </div>
                </section>
            </div>
            <div class="brand">
                <a href="/"><img src="https://localgov.digital/wp-content/uploads/2017/01/lgd_logo-1-e1485652490381.png" alt="LocalGov Digital"></a>
                <ul class="toggle-area" aria-hidden="true">
                    <li id="mobile-menu">
                        <i class="fa fa-nav"></i>
                    </li>
                </ul>
            </div>
            <div class="main-nav">
                <nav class="navbar" data-topbar role="navigation">
                    <section>
                        @Html.Action("BootstrapNavMenu", "Home")
                        @Html.Action("LoggedInAs", "User")
                    </section>
                </nav>
            </div>
        </div>
        <div id="global__brand-lines">
            <ul>
                <li class="brand-lines brand-red"></li>
                <li class="brand-lines brand-green"></li>
                <li class="brand-lines brand-blue"></li>
            </ul>
        </div>
    </header>

    }

    <main>
        @RenderSection("PluginPreContainer", false)
        @RenderBody()
        @RenderSection("Activity", false)
        @RenderSection("RelatedRelationships", false)
        @RenderSection("PluginPostContainer", false)
    </main>

    <footer id="global__footer_content">
        <section id="footer__nav-links">
