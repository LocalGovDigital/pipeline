@inherits RoadkillLayoutPage
<!DOCTYPE html>
<html lang="en">
<head>
    <title>@ViewBag.Title</title>
    @Html.Partial("HeadContent")
    @RenderSection("PluginHead", false)
</head>
<body class="makers">
    @RenderSection("PageToolbar", false)
    <nav class="navbar-head" role="navigation">
        <div class="container-fluid">
            <div class="row">
                <div class="col-md-10 col-md-offset-1">
                    <a class="navbar-brand" href="http://localgovdigital.info"><img src="http://localgovdigital.info/media/1005/lgd_logo.png" alt="LocalGov Digital Logo" height="25"></a>
                    <ul class="nav navbar-nav navbar-right hidden-sm hidden-xs" role="tablist">
                        <li role="presentation"><a href="http://localgovdigital.info/" class="localgovdigital">LocalGov Digital</a></li>
                        <li role="presentation"><a href="http://localgovdigital.info/localgovcamp/" class="localgovcamp">LocalGovCamp</a></li>
                        <li role="presentation"><a href="http://localgovdigital.info/local-democracy-bytes/" class="ldbytes">Local Democracy Bytes</a></li>
                        <li role="presentation" class="active"><a href="http://localgovdigital.info/localgov-digital-makers/" class="makers">LocalGov Makers</a></li>
                        <li role="presentation"><a href="http://localgovdigital.info/localgov-digital-voice/" class="lgvoice">LocalGov Voice</a></li>
                    </ul>
                </div>
            </div>
        </div>
    </nav>

    <nav class="navbar navbar-app navbar-default" role="navigation">
        <div class="container-fluid">
            <div class="col-md-10 col-md-offset-1">
                <div class="navbar-header">
                    <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1">
                        <span class="sr-only">Toggle navigation</span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                    <a class="navbar-brand" href="/">Pipeline</a>
                </div>

                <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
                    @Html.Action("BootstrapNavMenu", "Home")
                    @using (Html.BeginForm("Search", "Home", FormMethod.Get, new { role = "search", @class = "navbar-form navbar-left hidden-xs hidden" }))
                {
                        <div class="form-group">
                            <input type="text" class="form-control" name="q" placeholder="@SiteStrings.Search_PlaceHolder">
                        </div>
                        <button type="submit" class="btn btn-default">Search</button>
                }
                    <ul class="nav navbar-nav navbar-right">
                        @Html.Action("LoggedInAs", "User")
                    </ul>
                </div>
            </div>
        </div>
    </nav>

    <div class="container-fluid">
        <div class="row">
            <div class="col-xs-10 col-xs-offset-1">
                <span class="label label-stage label-alpha">ALPHA</span> This is a prototype, <a href="https://localgovdigital.typeform.com/to/BUXokv">your feedback will help us improve this service</a>.
            </div>
        </div>

        <div class="row">
            <div class="col-xs-10 col-xs-offset-1">
                @RenderSection("PluginPreContainer", false)
                @RenderBody()
                @RenderSection("Activity", false)
                @RenderSection("RelatedRelationships", false)
                @RenderSection("PluginPostContainer", false)
            </div>
        </div>
    </div>

    <footer>
        <div class="container-fluid">
            <div class="row">
                <div class="col-md-10 col-md-offset-1">
                    <p>
                        @RenderSection("PageDetailsFooter", false)
                        @RenderSection("ViewHistoryLink", false)
                    </p>
                </div>
                <div id="top-link" class="col-md-1">
                    <p><a href="#">Top</a></p>
                </div>
            </div>
            <div class="row">
                <div class="col-md-10 col-md-offset-1">
                    <p>Pipeline is a <a href="http://localgovdigital.info/localgov-digital-makers">LocalGov Digital Makers</a> project.</p>
                    <p>The source is available on <a href="https://github.com/LocalGovDigital/pipeline">GitHub</a>. A list of feature requests can be found on <a href="https://trello.com/b/a80RaQ0s/pipeline">Trello</a>.</p>
                </div>
            </div>

            @RenderSection("PluginFooter", false)
        </div>
    </footer>
</body>
</html>