@model RelViewModel
@{
    ViewBag.Title = SiteStrings.Profile_Title;
}

<div class="page-header">
    <h1>Like or Join</h1>
</div>

@if (Model == null)
{
    <p>@SiteStrings.Profile_Not_Available</p>
}
else
{
    <p>This page allows you to show interest in a particular project. At present this will just be shown below the project but future functionality will inform the project owner of your interest.</p>
    <form role="form" method="post">

        <div class="form-group">
            <label for="RelTypeID" class="control-label">Interest</label>
            <div>
                @Html.BootstrapDropDownListFor(p => p.relTypeID, Model.RelTypesAsSelectList, SiteStrings.SiteSettings_Configuration_DatabaseType_Help)
                <span class="help-block"><strong>Like:</strong> You think this is a good idea<br>
                    <strong>Join:</strong> You'd like to join in this project</span>
            </div>
        </div>

        <div class="form-group">
            <label for="NewEmail" class="control-label">Comments</label>
            <div>
                @(Html.TextAreaFor<RelViewModel, string>(t => t.reltext, new { @class = "form-control" }))
            </div>
        </div>

        <div class="form-group">
            <div>
                <button type="submit" class="btn btn-primary btn-lg">@SiteStrings.Button_Save</button>
                @Html.ActionLink("Back", "Index", "Wiki", new { Id = Model.pageID }, new { @class = "btn btn-link" })
            </div>
        </div>
    </form>
}
